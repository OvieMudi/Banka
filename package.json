{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application that powers banking operations like account creation, customer deposit and withdrawals.",
  "main": "app.js",
  "scripts": {
    "start": "babel-node ./app.js",
    "start-local": "nodemon --exec babel-node ./app.js",
    "test": "cross-env NODE_ENV='test' mocha ./server/test --require @babel/register --recursive --timeout 3000 --exit",
    "test-local": "mocha --compilers js:@babel/register --timeout 3000 --exit",
    "coverage": "nyc npm run test",
    "report": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OvieMudi/Banka.git"
  },
  "keywords": [
    "Banka",
    "banking",
    "finance"
  ],
  "author": "Ovie Mudi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OvieMudi/Banka/issues"
  },
  "homepage": "https://github.com/OvieMudi/Banka#readme",
  "dependencies": {
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "babel-plugin-istanbul": "^5.1.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.11",
    "nyc": "^13.3.0"
  },
  "engines": {
    "node": "10.x"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
